	<h4>Questions</h4>
	
	<% if @exam.question_on_exams.any? %>
		<div class="accordion" id="exam-question-list">
		<% count = 1 %>
		
		<% @exam.question_on_exams.each do |question_on_exam| %>
			<div class="accordion-group">
				
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#exam-questions-list" href="#collapse<%= count.to_s %>">
					<table>				
					<tr>
						<td><i class="icon-chevron-right"></i></td>
						<td><span style="margin-right: 15px; font-weight: bold;"><%= question_on_exam.position %></span></td>
						
						<td width="100%"><%= question_on_exam.question ? truncate(question_on_exam.question.statement, :length => 55, :omission => "...") : "Not Found"  %></td>
					</tr>
					</table>
						
					</a>
				</div>
				<div id="collapse<%= count.to_s %>" class="accordion-body collapse">
					<div class="accordion-inner">
						<%= question_on_exam.question ? question_on_exam.question.statement : "This question was not found in the database." %>
					</div>
				</div>
							
				<% count = count + 1 %>
			</div>
			
		<% end %>
		</div>
	<% else %>
		<div class="alert alert-info">
			<a class="close" data-dismiss="alert">Ã—</a>
			
			<p>Add questions to this exam clicking the buttons below.</p>
			
		</div>
	<% end %>
	
	<div align="center">
	<div class="btn btn-success" id="exam-create-question" data-toggle="button">Create Question</div>
	<div class="btn btn-info" id="exam-include-question" data-toggle="button">Include Question</div>
	</div>