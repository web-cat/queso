<br />
<div class="row">
	<div class="span4 offset4 well">
		<legend>Please Sign In</legend>
		<% if @user_session.errors.any? %>
		<div class="alert alert-error">  
	  	  <a class="close" data-dismiss="alert">Ã—</a>
	      <% @user_session.errors.full_messages.each do |msg| %>
	        <%= msg %><br />
	      <% end %>
	    </div>
	    <% end %>

		<%= form_for(@user_session) do |f| %>
		
		  <div class="span4" align="center" style="margin-left: 0;">
		  	<table>
		    <tr><td><%= f.text_field :email, :placeholder => "Email" %></td></tr>
		    <tr><td><%= f.password_field :password, :placeholder => "Password" %></td></tr>
		  	<tr><td><%= f.check_box :remember_me, :style => "float: left; margin-right: 10px;" %>
					<label class="string optional" for="user_session_remember_me"> Remember me</label></td></tr>
		    <tr><td><%= f.submit 'Login', :class => "btn btn-primary btn-block" %></td></tr>
		    </table>
		  </div>
		  
		<% end %>		
	</div>
</div>
